<AuthorizeView>
    <div @ondragenter='OnDragEnter' @ondragend='(() => Console.WriteLine("Drag End"))' @onmouseover="OnMouseOver" @onmouseout="(() => { IsMousedOver = false; StateHasChanged(); })" style="width: 100%; height: 100%; @DraggingCSS @OnMouseOverCSS">
        @foreach (var medication in MedicationService.GetMedicationsByUser(context.User.Identity.Name))
        {
            <div>
                @medication.Name
            </div>
        }
    </div>
</AuthorizeView>
